<h2>Edit your profile.</h2>

<% if @user.errors.any?%>
<h3>You couldn't sign up because of the following:</h3>
<ul>
    <%@user.errors.full_messages.each do |err|%>
        <li><%=err%></li>
    <%end%>
</ul>
<%end%>

<%= form_with(model: @user, local: true) do |f| %>
<p>
    <%= f.label :username%>
    <%= f.text_field :username%>
</p>

<p>
    <%= f.label :email%>
    <%= f.email_field :email%>
</p>

<p>
    <%= f.label :password%>
    <%= f.password_field :password%>
</p>

<p>
    <%= f.submit "Update profile"%>
</p>
<% end %>

<p><%= link_to 'Go Back', articles_path %></p>